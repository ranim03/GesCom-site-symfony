{% extends 'base.html.twig' %}

{% block title %}Categorie index
{% endblock %}

{% block body %}
	<h4>NosCategories...</h4>

	<table class="table">
		<thead>
			<tr class="table-primary">
				<th>Photo</th>
				<th>Id</th>
				<th>Nom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for categorie in categories %}
				<tr>
					<td><img class="rounded-circle" width="50" height="50" style="border-radius:75px" src="{{ asset('images/imagescategories/' ~ categorie.imageFilename) }}" alt=""></td>
					<td>{{ categorie.id }}</td>
					<td>{{ categorie.nom }}</td>
					<td>
						<a type="button" class="btn btn-primary" href="{{ path('app_categorie_show', {'id': categorie.id}) }}">show</a>
						<a type="button" class="btn btn-primary" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">edit</a>
						<a type="button" class="btn btn-primary" href="{{ path('app_categorie_articles', {'id': categorie.id}) }}">Articles</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_categorie_new') }}">Create new</a>
{% endblock %}
